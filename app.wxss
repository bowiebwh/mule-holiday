.job-info {
  margin-top: 20rpx !important;
}

.job-header {
  display: flex !important;
  align-items: center !important;
  justify-content: space-between !important;
  margin-bottom: 16rpx !important;
}

.job-title {
  font-size: 32rpx !important;
  font-weight: 700 !important;
  color: #202124 !important;
}

.job-tag {
  font-size: 22rpx !important;
  padding: 6rpx 12rpx !important;
  background-color: #e3f2fd !important;
  color: #1976d2 !important;
  border-radius: 16rpx !important;
  font-weight: 500 !important;
}

.job-details {
  display: flex !important;
  align-items: center !important;
  gap: 20rpx !important;
  flex-wrap: wrap !important;
}

.salary {
  font-size: 28rpx !important;
  font-weight: 600 !important;
  color: #d32f2f !important;
}

.company {
  font-size: 26rpx !important;
  color: #5f6368 !important;
}

/* 岗位要求样式 */
.requirements-list {
  margin-top: 20rpx !important;
}

.requirement-item {
  margin-bottom: 16rpx !important;
  overflow: hidden !important;
}

.requirement-content {
  font-size: 26rpx !important;
  line-height: 1.6 !important;
  color: #333 !important;
}

/* 需求标题样式 */
.requirement-title {
  font-size: 28rpx !important;
  font-weight: 700 !important;
  color: #202124 !important;
  margin: 20rpx 0 10rpx 0 !important;
  padding: 12rpx 20rpx !important;
  background-color: #e8f0fe !important;
  border-radius: 8rpx !important;
  line-height: 1.4 !important;
  border-left: 4rpx solid #1a73e8 !important;
}

/* 详情内容样式 */
.details-content {
  font-size: 24rpx !important;
  line-height: 1.6 !important;
  color: #555 !important;
}

/* 可编辑岗位名称样式 */
.editable-title {
  display: flex !important;
  align-items: center !important;
  gap: 12rpx !important;
  flex: 1 !important;
}

.editable-input {
  font-size: 32rpx !important;
  font-weight: 700 !important;
  color: #202124 !important;
  padding: 8rpx 12rpx !important;
  border: 2rpx solid #1a73e8 !important;
  border-radius: 8rpx !important;
  flex: 1 !important;
  background-color: white !important;
}

.edit-icon {
  color: #9ca3af !important;
  transition: all 0.2s ease !important;
  margin-left: 8rpx !important;
}

.edit-icon:hover {
  color: #1a73e8 !important;
}

/* 岗位要求样式 */
.requirement-header {
  display: block !important;
  width: 100% !important;
  padding: 20rpx 20rpx 20rpx 30rpx !important;
  background-color: white !important;
  border-radius: 8rpx !important;
  box-sizing: border-box !important;
  border: 1rpx solid #e0e0e0 !important;
  margin-bottom: 8rpx !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05) !important;
}

/* 技术栈与关键词的特殊样式 */
.requirement-item:nth-child(odd) .requirement-header {
  background-color: #f8f9ff !important;
}

/* 职位亮点的特殊样式 */
.requirement-item:nth-child(even) .requirement-header {
  background-color: #f0f8ff !important;
}

/* 移除下拉箭头 */
.expand-icon {
  display: none !important;
}

/* 移除详情内容的额外边框和样式 */
.requirement-details {
  display: none !important;
}

@keyframes slideDown {
  from {
    opacity: 0 !important;
    height: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
  }
  to {
    opacity: 1 !important;
    height: auto !important;
    padding-top: 16rpx !important;
    padding-bottom: 16rpx !important;
  }
}

/* 图标样式 */
.icon {
  margin-right: 8rpx !important;
  font-size: 32rpx !important;
  vertical-align: middle !important;
}

/* 固定在底部紧贴tab栏的按钮样式 */
.fixed-bottom-btn {
  position: fixed !important;
  bottom: 0 !important;
  left: 0 !important;
  right: 0 !important;
  padding: 20rpx !important;
  background-color: white !important;
  border-top: 1rpx solid #e0e0e0 !important;
  z-index: 100 !important;
  max-width: 100% !important;
  width: 100% !important;
  box-sizing: border-box !important;
  margin: 0 !important;
  left: 0 !important;
  transform: none !important;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05) !important;
  /* 确保按钮容器不随滚动变化 */
  pointer-events: none !important;
}

.fixed-bottom-btn button.btn {
  /* 确保一键生成全部按钮与分析岗位按钮高度一致 */
  height: 96rpx !important;
  pointer-events: auto !important;
  /* 确保按钮宽度与页面跨度一致 */
  width: 100% !important;
  max-width: 600px !important;
  margin: 0 auto !important;
  display: block !important;
}

/* 快捷操作样式 */
.quick-actions {
  margin-top: 20rpx !important;
  display: flex !important;
  flex-direction: column !important;
  gap: 16rpx !important;
}

.quick-action-item {
  display: flex !important;
  align-items: center !important;
  gap: 20rpx !important;
  padding: 24rpx !important;
  background-color: white !important;
  border: 2rpx solid #e0e0e0 !important;
  border-radius: 12rpx !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
  position: relative !important;
}

.quick-action-item:hover {
  border-color: #1a73e8 !important;
  background-color: #f8f9ff !important;
}

.action-icon {
  width: 56rpx !important;
  height: 56rpx !important;
  border-radius: 12rpx !important;
  background-color: #e3f2fd !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  font-size: 28rpx !important;
  flex-shrink: 0 !important;
  color: #1a73e8 !important;
}

.action-content {
  flex: 1 !important;
  min-width: 0 !important;
}

.action-title {
  font-size: 28rpx !important;
  font-weight: 600 !important;
  color: #202124 !important;
  margin-bottom: 4rpx !important;
}

.action-desc {
  font-size: 22rpx !important;
  color: #5f6368 !important;
  line-height: 1.4 !important;
  overflow: hidden !important;
  text-overflow: ellipsis !important;
  display: -webkit-box !important;
  -webkit-line-clamp: 1 !important;
  -webkit-box-orient: vertical !important;
}

.action-arrow {
  font-size: 28rpx !important;
  color: #9ca3af !important;
  flex-shrink: 0 !important;
  position: absolute !important;
  right: 24rpx !important;
  top: 50% !important;
  transform: translateY(-50%) !important;
}

/* 下载简历样式 */
.download-resume {
  margin-top: 20rpx !important;
  padding: 24rpx !important;
  background-color: #f8f9ff !important;
  border: 2rpx solid #e0e0e0 !important;
  border-radius: 12rpx !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05) !important;
  display: flex !important;
  align-items: center !important;
  justify-content: space-between !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
}

.download-resume:active {
  background-color: #e8f0fe !important;
  transform: translateY(2rpx) !important;
}

.download-info {
  flex: 1 !important;
  margin-right: 20rpx !important;
}

.download-name {
  font-size: 28rpx !important;
  font-weight: 600 !important;
  color: #202124 !important;
  margin-bottom: 8rpx !important;
}

.download-size {
  font-size: 24rpx !important;
  color: #5f6368 !important;
}

.download-icon {
  font-size: 48rpx !important;
  color: #1a73e8 !important;
}
