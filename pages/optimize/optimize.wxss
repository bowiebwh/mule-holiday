.container {
  padding: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.section {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.tip {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 24rpx;
}

/* 图片上传按钮样式 */
.upload-image-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  background-color: #f9fafb;
  cursor: pointer;
  transition: all 0.2s ease;
}

.upload-image-btn:hover {
  border-color: #3b82f6;
  background-color: #eff6ff;
}

.upload-icon {
  font-size: 32rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* Textarea样式 */
.textarea-wrapper {
  position: relative;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  background-color: #f9fafb;
  border: 2rpx solid #e5e7eb;
  transition: all 0.2s ease;
}

.textarea-wrapper:focus-within {
  border-color: #3b82f6;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

.input-job {
  width: 100%;
  height: 300rpx;
  padding: 24rpx 60rpx 24rpx 24rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #1f2937;
  background-color: transparent;
  border: none;
  resize: none;
  box-sizing: border-box;
  letter-spacing: 0.5rpx;
  overflow-y: auto;
}

.input-job::placeholder {
  color: #d1d5db;
}

.clear-btn {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #9ca3af;
  cursor: pointer;
  z-index: 10;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f3f4f6;
  transition: all 0.2s ease;
}

.clear-btn:hover {
  background-color: #e5e7eb;
  color: #6b7280;
}

.char-count {
  position: absolute;
  right: 24rpx;
  bottom: 16rpx;
  font-size: 20rpx;
  color: #9ca3af;
  z-index: 5;
}

/* 按钮样式 */
.btn {
  width: 100%;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  background-color: #3b82f6;
  border: none;
  border-radius: 12rpx;
  margin-top: 24rpx;
  transition: all 0.2s ease;
}

.btn:hover {
  background-color: #2563eb;
}

.btn:disabled {
  background-color: #93c5fd;
  cursor: not-allowed;
}

/* 一键清除按钮样式 */
.btn-clear {
  width: 100%;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  background-color: #ef4444;
  border: none;
  border-radius: 12rpx;
  margin-top: 24rpx;
  transition: all 0.2s ease;
}

.btn-clear:hover {
  background-color: #dc2626;
}

/* 文件上传样式 */
.file-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  background-color: #f9fafb;
  cursor: pointer;
  transition: all 0.2s ease;
}

.file-upload:hover {
  border-color: #3b82f6;
  background-color: #eff6ff;
}

.file-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.file-upload-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 8rpx;
}

.file-hint {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 16rpx;
}

.file-name {
  font-size: 24rpx;
  color: #3b82f6;
  word-break: break-all;
  text-align: center;
  max-width: 100%;
}

/* 岗位信息样式 */
.job-info {
  margin-top: 24rpx;
}

.job-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.editable-title {
  display: flex;
  align-items: center;
  flex: 1;
}

.editable-input {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  border: none;
  border-bottom: 2rpx solid #3b82f6;
  padding: 8rpx 0;
  margin-right: 16rpx;
  flex: 1;
}

.job-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-right: 16rpx;
  cursor: pointer;
}

.edit-icon {
  color: #9ca3af;
  cursor: pointer;
  transition: color 0.2s ease;
}

.edit-icon:hover {
  color: #3b82f6;
}

.job-tag {
  font-size: 24rpx;
  color: #6b7280;
  background-color: #f3f4f6;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.job-details {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 26rpx;
  color: #6b7280;
}

.salary {
  font-weight: 500;
  color: #ef4444;
}

/* 岗位要求样式 */
.requirements-list {
  margin-top: 24rpx;
}

.requirement-item {
  margin-bottom: 16rpx;
}

.requirement-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
}

.requirement-header {
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
  border-left: 4rpx solid #3b82f6;
}

.requirement-content {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 40rpx;
}

/* 下载简历样式 */
.download-resume {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.download-resume:hover {
  background-color: #eff6ff;
}

.download-info {
  flex: 1;
}

.download-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.download-size {
  font-size: 24rpx;
  color: #6b7280;
}

.download-icon {
  font-size: 40rpx;
  color: #3b82f6;
}

/* 快捷操作样式 */
.quick-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 24rpx;
}

.quick-action-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 24rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.quick-action-item:hover {
  background-color: #eff6ff;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  font-size: 40rpx;
  margin-top: 4rpx;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 36rpx;
}

.action-arrow {
  font-size: 32rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

/* 固定底部按钮样式 */
.fixed-bottom-btn {
  position: fixed;
  bottom: 30rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 100;
}

/* 进度条样式 */
.progress {
  margin-top: 24rpx;
  text-align: center;
}

.progress-bar {
  width: 100% !important;
  height: 12rpx !important;
  background-color: #e5e7eb !important;
  border-radius: 6rpx !important;
  overflow: hidden !important;
  margin-bottom: 12rpx !important;
  box-sizing: border-box !important;
}

.progress-fill {
  height: 100% !important;
  width: 0% !important;
  background-color: #3b82f6 !important;
  border-radius: 6rpx !important;
  transition: width 0.3s ease !important;
  box-sizing: border-box !important;
  margin: 0 !important;
  padding: 0 !important;
  border: none !important;
}

.progress-text {
  font-size: 24rpx !important;
  color: #6b7280 !important;
}

