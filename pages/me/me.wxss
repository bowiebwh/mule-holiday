/* 页面容器样式 */
.container {
  background-color: transparent;
  font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Microsoft YaHei", sans-serif;
  line-height: 1.6;
  color: #333;
  padding: 20rpx;
  min-height: calc(100vh - 120rpx);
  box-sizing: border-box;
}

/* 用户信息栏样式 */
.user-info-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #1a73e8 0%, #4285f4 100%);
  padding: 32rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(26, 115, 232, 0.3);
  margin-bottom: 60rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 添加装饰元素 */
.user-info-bar::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.user-info-bar::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -20%;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #1a73e8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.login-btn {
  background: rgba(255, 255, 255, 0.95);
  color: #1a73e8;
  padding: 16rpx 40rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  position: relative;
  z-index: 1;
}

.login-btn:hover {
  background: white;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
  border-color: white;
}

.login-btn:active {
  transform: translateY(0);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 历史记录标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #1a73e8;
}

/* 历史记录列表样式 */
.history-list {
  background-color: transparent;
  padding: 0;
  min-height: auto;
}

/* 历史记录项样式 */
.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: white;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.history-item:hover {
  border-color: #1a73e8;
  box-shadow: 0 4rpx 12rpx rgba(26, 115, 232, 0.15);
}

.position-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

/* 删除按钮样式 */
.delete-btn {
  color: #ef4444;
  font-size: 26rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.delete-btn:hover {
  background-color: #fef2f2;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #9ca3af;
  font-size: 28rpx;
  background-color: transparent;
}

/* 加载中状态样式 */
.loading-state {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #9ca3af;
  font-size: 28rpx;
  background-color: transparent;
}

/* 加载更多样式 */
.load-more {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #1a73e8;
  font-size: 28rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  background-color: transparent;
}

.load-more:hover {
  color: #2563eb;
  text-decoration: underline;
}

/* 没有更多数据样式 */
.no-more {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #9ca3af;
  font-size: 28rpx;
  background-color: transparent;
}
