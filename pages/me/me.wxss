  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.login-btn {
  background: rgba(255, 255, 255, 0.95);
  color: #1a73e8;
  padding: 14rpx 32rpx;
  border-radius: 24rpx;
