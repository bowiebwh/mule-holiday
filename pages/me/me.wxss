/* 页面容器样式 */
.container {
  background-color: transparent;
  font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Microsoft YaHei", sans-serif;
  line-height: 1.6;
  color: #333;
  padding: 20rpx;
  min-height: calc(100vh - 120rpx);
  box-sizing: border-box;
}

/* 用户信息栏样式 */
.user-info-bar {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #1a73e8 0%, #4285f4 100%);
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(26, 115, 232, 0.3);
  margin-bottom: 60rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  width: 100%;
}

.user-info-left {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
  min-width: 0;
  flex: 1;
}

.avatar-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  padding: 0;
  margin: 0;
  border: none;
  background: none;
  overflow: hidden;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.user-details {
  display: flex;
  flex-direction: column;
  margin-left: 0;
  min-width: 0;
  flex: 1;
}

.nickname-input {
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 6rpx 8rpx;
  margin-bottom: 6rpx;
  width: 100%;
  max-width: 200rpx;
  text-align: left;
}

.login-btn {
  background: rgba(255, 255, 255, 0.95);
  color: #1a73e8;
  padding: 14rpx 32rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  position: relative;
  z-index: 1;
  white-space: nowrap;
  flex-shrink: 0;
  margin-left: 20rpx;
}

/* 添加装饰元素 */
.user-info-bar::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.user-info-bar::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -20%;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.user-info-left {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
  flex: 1;
  min-width: 0;
  justify-content: flex-start;
  width: 100%;
}

.user-details {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  flex: 1;
  min-width: 0;
  justify-content: flex-start;
  align-items: flex-start;
  max-width: calc(100% - 100rpx);
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

