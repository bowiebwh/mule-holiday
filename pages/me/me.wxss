  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  padding: 0;
  margin: 0;
  border: none;
  background: none;
  overflow: hidden;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  margin: 0;
  padding: 0;
  display: block;
}

.nickname-input {
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 6rpx 8rpx;
  margin-bottom: 6rpx;
  width: 200rpx;
  text-align: left;
}

.nickname-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.user-login-info {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

