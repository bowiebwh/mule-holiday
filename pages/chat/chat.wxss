/* 加载中状态样式 */
.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 10rpx 0;
}

.loading-dots .dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #1a73e8;
  animation: loading 1.4s infinite ease-in-out both;
}

.loading-dots .dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dots .dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 优化聊天输入框样式 */
.input-text {
  margin-bottom: 0 !important;
  margin-right: 20rpx !important;
  padding: 20rpx 30rpx !important;
  min-height: 80rpx !important;
  max-height: 200rpx !important;
  border-radius: 16rpx !important;
  font-size: 28rpx !important;
  line-height: 40rpx !important; /* 调整行高，适应多行文本 */
  background-color: #f8f9fa !important;
  border: 1rpx solid #e5e7eb !important;
  box-sizing: border-box !important;
  transition: none !important; /* 禁用过渡动画，避免输入时闪动 */
  resize: none !important; /* 禁用手动调整大小 */
}

/* 输入框占位符样式 */
.input-placeholder {
  font-size: 26rpx !important;
  color: #d1d5db !important;
  line-height: 80rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  height: 100% !important;
}

/* 当输入框获得焦点时隐藏占位符 */
.input-text:focus .input-placeholder {
  display: none !important;
}

/* 同时保留原有伪元素样式，确保兼容性 */
.input-text::placeholder {
  font-size: 26rpx !important;
  color: #d1d5db !important;
  line-height: 80rpx !important;
}

/* 当输入框获得焦点时，隐藏伪元素占位符 */
.input-text:focus::placeholder {
  opacity: 0 !important;
  transition: opacity 0.2s ease !important;
}

/* 优化发送按钮样式 */
.send-btn {
  width: 80rpx !important;
  height: 80rpx !important;
  opacity: 1 !important;
  filter: none !important;
  transition: none !important; /* 禁用过渡动画，避免状态变化时闪动 */
}

.send-btn.disabled {
  opacity: 0.3 !important;
  filter: grayscale(100%) !important;
  pointer-events: none !important;
  transition: none !important; /* 禁用过渡动画，避免状态变化时闪动 */
}

/* 对话历史区域样式 */
.chat-history-section {
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 16rpx 16rpx 0 0;
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.chat-history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chat-history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.chat-history-loading {
  font-size: 24rpx;
  color: #999;
}

/* 对话历史列表样式 */
.chat-history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 对话历史卡片样式 */
.chat-history-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

/* 卡片头部样式 */
.chat-history-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.chat-history-card-header:hover {
  background-color: #fafafa;
}

.chat-history-card-summary {
  flex: 1;
  overflow: hidden;
}

.chat-history-card-question {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 40rpx;
}

.chat-history-card-time {
  font-size: 22rpx;
  color: #999;
}

/* 卡片箭头样式 */
.chat-history-card-arrow {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s ease;
}

.chat-history-card-arrow.expanded {
  transform: rotate(180deg);
}

/* 卡片展开内容样式 */
.chat-history-card-content {
  padding: 20rpx;
  background-color: #fafafa;
  border-top: 1rpx solid #eee;
}

/* 历史消息样式 */
.chat-history-message {
  margin-bottom: 20rpx;
}

.chat-history-message:last-child {
  margin-bottom: 0;
}

.chat-history-message-label {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.chat-history-message.user .chat-history-message-label {
  color: #1a73e8;
}

.chat-history-message.ai .chat-history-message-label {
  color: #34a853;
}

.chat-history-message-content {
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
  white-space: pre-wrap;
}

/* 无历史记录提示样式 */
.chat-history-empty {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 历史对话标题样式 */
.chat-history-content-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

/* 会话详情样式 */
.chat-history-session-detail {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 会话消息样式 */
.chat-history-session-message {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

/* 会话头像样式 */
.chat-history-session-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.chat-history-session-avatar.user {
  background-color: #1a73e8;
  color: white;
}

.chat-history-session-avatar.ai {
  background-color: #34a853;
  color: white;
}

/* 对话轮次样式 */
.chat-history-round {
  margin-bottom: 30rpx;
}

.chat-history-round:last-child {
  margin-bottom: 0;
}

/* 会话气泡样式 */
.chat-history-session-bubble {
  flex: 1;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  white-space: pre-wrap;
}

.chat-history-session-bubble.user {
  background-color: #e8f0fe;
  color: #1a73e8;
  border-bottom-right-radius: 4rpx;
}

.chat-history-session-bubble.ai {
  background-color: #f0fff4;
  color: #34a853;
  border-bottom-left-radius: 4rpx;
}

/* 会话详情加载状态 */
.chat-history-loading-detail {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

/* 会话详情空状态 */
.chat-history-empty-detail {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #fafafa;
  border-radius: 12rpx;
  margin-top: 10rpx;
}

/* 移除聊天页面底部的额外padding，避免出现空白区域 */
page {
  padding-bottom: 0 !important;
}

/* 标题容器样式 */
.title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 新建对话按钮样式 */
.new-chat-btn {
  width: 56rpx;
  height: 56rpx;
  cursor: pointer;
  transition: all 0.2s ease;
}

.new-chat-btn:hover {
  transform: scale(1.1);
}

.new-chat-btn:active {
  transform: scale(0.95);
}

/* 移除页面底部的额外padding，避免出现空白区域 */
page {
  padding-bottom: 15px !important;
}

/* 复制按钮样式 */
.copy-btn {
  position: absolute !important;
  bottom: 8rpx !important;
  right: 8rpx !important;
  width: 50rpx !important;
  height: 50rpx !important;
  cursor: pointer !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  background-color: rgba(255, 255, 255, 0.8) !important;
  border-radius: 10rpx !important;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1) !important;
  transition: all 0.2s ease !important;
  z-index: 10 !important;
}

.copy-btn:hover {
  background-color: rgba(255, 255, 255, 1) !important;
  transform: scale(1.05) !important;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15) !important;
}

.copy-btn:active {
  transform: scale(0.95) !important;
}

.copy-icon {
  width: 40rpx !important;
  height: 40rpx !important;
  vertical-align: middle !important;
}

